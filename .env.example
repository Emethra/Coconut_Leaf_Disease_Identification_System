# Environment Configuration for Coconut Leaf Disease Predictor
# Copy this file to .env and update the values for your environment

# Application Settings
SECRET_KEY=your-very-secure-secret-key-here-change-this
DEBUG=False
HOST=0.0.0.0
PORT=5000
ENVIRONMENT=production

# Security Settings
SECURE_COOKIES=True
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO

# Rate Limiting (requests per minute)
RATE_LIMIT_PREDICTION=10
RATE_LIMIT_GENERAL=100

# Database (for future PostgreSQL migration)
# DATABASE_URL=postgresql://user:password@localhost/coconut_leaf_db

# Model Settings
MODEL_PATH=coconut_leaf_disease_model.h5
